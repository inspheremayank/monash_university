                            </div>
                            <div class="col-12 col-lg-4">
                                {{ this.render('partials/_single-article.twig', {network:network, class: ''}) | raw }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
